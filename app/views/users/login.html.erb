<h1>Please login.</h1>

<%= form_with model: @user do |f| %>

  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "Login" %>
  <br><br>
  Not a user?<br>
  <%= link_to "Sign-Up", new_user_path %>


<% end %>