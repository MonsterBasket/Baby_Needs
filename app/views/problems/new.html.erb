<h1>New problem</h1>

<%= form_with model: @problem do |form| %>

  <% if @problem && @problem.errors.any? %>
    <div style="color: red">
      <h2><%#= pluralize(@problem.errors.count, "error") prohibited this @problem from being saved: %></h2>

      <ul>
        <% @problem.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <div style="color:red"><%#= @problem.errors[:title].first %></div>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description, size: "60x10" %>
    <div style="color:red"><%#= @problem.errors[:description].first %></div>
  </div>

  <%= form.submit %>
  <% end %>

<br>

<div>
  <%= link_to "Back to problems", problems_path %>
</div>